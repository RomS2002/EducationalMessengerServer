<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
         http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd">

    <changeSet id="createUserTable" author="RomS">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>
        <createTable tableName="user">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="reg_token" type="char(16)">
                <constraints nullable="false"/>
            </column>
            
            <column name="email" type="varchar(255)">
            	<constraints nullable="false"/>
            </column>
            
            <!-- <column name="jwt" type="varchar(255)"/> -->
            <column name="expiration_date" type="datetime"/>

            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            
            <!-- <column name="wstoken" type="varchar(255)">
                <constraints nullable="false"/>
            </column> -->
            
            <column name="role" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            
            <column name="adminpanel_id" type="int">
            	<constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex indexName="ind_user_regtoken" tableName="user">
			<column name="reg_token" />
		</createIndex>
		
		<createIndex indexName="ind_user_email" tableName="user">
			<column name="email" />
		</createIndex>
        
        <createIndex indexName="ind_user_adminpanelid" tableName="user">
			<column name="adminpanel_id" />
		</createIndex>
        
        <rollback>
            <dropIndex tableName="user" indexName="ind_user_regtoken"/>
            <dropIndex tableName="user" indexName="ind_user_email"/>
            <dropIndex tableName="user" indexName="ind_user_adminpanelid"/>
            <dropTable tableName="user"/>
        </rollback>
    </changeSet>
</databaseChangeLog>